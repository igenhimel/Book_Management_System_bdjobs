<%-include("layout/header")%>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Search Panel</h5>
        </div>
        <div class="card-body">
            <form action="/api/books" method="post">
                <div class="form-group">
                    <label for="keyword">Keyword:</label>
                    <input type="text" class="form-control" name="keyword" id="keyword" placeholder="Enter keyword">
                </div>
                <div class="form-group">
                    <label for="publisherAge">Publisher Age:</label>
                    <input type="text" class="form-control" name="publisherAge" id="publisherAge" placeholder="Enter publisher age">
                </div>
                <div class="form-group">
                    <label for="bookType">Book Type:</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="bookType" type="checkbox" id="sci-fi" value="sci-fi">
                        <label class="form-check-label" for="sci-fi">Sci-Fi</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="bookType" type="checkbox" id="novel" value="novel">
                        <label class="form-check-label" for="novel">Novel</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="bookType" type="checkbox" id="drama" value="drama">
                        <label class="form-check-label" for="drama">Drama</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" id="search-button">Search</button>
            </form>
        </div>
    </div>
</div>


<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Results</h5>
        </div>
        <div class="card-body">
            <div id="search-form-container">
                <!-- Your form code here -->
            </div>
        </div>
    </div>
    <div id="results-container">

    </div>
</div>

<%-include("layout/footer")%>